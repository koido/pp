{
  "name": "phase-caller-batch-applet",
  "title": "PP-Toolkit : Ultralight Phase Caller",
  "summary": "Calls phase from sequencing reads",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "binary_files",
      "label": "Input binary files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "vcf_file_without_samples",
      "label": "VCF/BCF file without samples",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "sample_list",
      "label": "Sample list as in the original VCF/BCF (generated by pp-extract)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "suffix",
      "label": "Suffix appended to the rephased binary file",
      "class": "string",
      "optional": true,
      "default": "rephased",
      "help": ""
    },
    {
      "name": "destination",
      "label": "Destination for output files",
      "class": "string",
      "help": ""
    },
    {
      "name": "cram_path",
      "label": "Path to CRAM files",
      "class": "string",
      "optional": true,
      "default": "Bulk/Whole genome sequences/Whole genome CRAM files",
      "help": ""
    },
    {
      "name": "verbose",
      "label": "Be more verbose",
      "class": "boolean",
      "optional": true,
      "default": false,
      "help": ""
    },
    {
      "name": "threads",
      "label": "Number of threads",
      "class": "int",
      "optional": true,
      "default": 0,
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/phase-caller-batch-applet.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x2"
        }
      }
    }
  }
}
